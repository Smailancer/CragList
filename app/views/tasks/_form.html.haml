%div.container
    = simple_form_for(@task, html: {class: 'form-horizontal'}) do |f|
        = f.collection_select :category_id, Category.all, :id, :name, {prompt: "Choose a Category"}, input_html: {class: "dropdown-toggle"}
        = f.input :title, lable: "Task Title", input_html: {class: "form-control"}
        = f.input :description, lable: "Task Description", input_html: {class: "form-control"}
        = f.input :company, lable: "Your compnay", input_html: {class: "form-control"}
        = f.input :url, lable: "Link to task", input_html: {class: "form-control"}
        %br/
        = f.submit 
